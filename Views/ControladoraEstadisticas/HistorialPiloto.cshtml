<h1> El recorrido de @ViewBag.Piloto.NombrePiloto</h1>

<div class="container-lg mt-5">
	@foreach(Resultado res in ViewBag.Resultados)
	{
		<div class="card">
			<div class="card-header">
				<h4 class="card-title">@res.Carrera.Nombre</h4>
			</div>
			<div class="card-body">
				<table>
					<thead>
						<tr>
							<th>Posicion de Salida</th>
							<th>Poscion de Llegada</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td>@res.PosicionSalida</td>
							<td>@res.PosicionLlegada</td>
						</tr>
					</tbody>
				</table>
				<div class="card-footer">
					<p class="card-text">@res.Carrera.fecha </p>
				</div>
			</div>

		</div>
	}
</div>