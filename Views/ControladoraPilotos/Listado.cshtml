@model IEnumerable<Piloto>



<h2>Pilotos de Formula 1</h2>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Numero auto</th>
            <th>Escuderia</th>
            <th>Nombre</th>
            <th>Fecha de Nacimiento</th>
            <th>Pais de Origen</th>
            <th>Puntaje</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Piloto piloto in ViewBag.Pilotos)
        {
            <tr>
                <td>@piloto.NumeroPiloto</td>
                <td>@piloto.NumeroAuto</td>
                <td>@piloto.Escuderia.Nombre</td>
                <td>@piloto.NombrePiloto</td>
                <td>@piloto.FechaNac</td>
                <td>@piloto.PaisDeOrigen</td>
                <td>@piloto.PuntajeAcumulado</td>
                <td>
                    <a href="@Url.Action("Editar", new { id = piloto.NumeroPiloto })" class="btn btn-warning">Editar</a>
                    <a href="@Url.Action("Eliminar", new {id = piloto.NumeroPiloto })" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<div>
    @if (ViewBag.Pilotos.Count < 20)
    {
        <a href="@Url.Action("Crear", "ControladoraPilotos")" class="btn btn-primary">Agregar Nuevo Piloto</a>
    }
    else
    {
        <p>No se pueden agregar más pilotos. El límite es 20.</p>
    }
</div>


