@model Formula_1.Models.Escuderia

@{
    ViewBag.Title = "Editar Escudería";
}

<h2>@ViewBag.Title</h2>

<form asp-action="Editar" method="post">
    <input type="hidden" asp-for="IdEscuderia" />
    <div>
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
    </div>
    <div>
        <label asp-for="PuntajeAcumulado"></label>
        <input asp-for="PuntajeAcumulado" class="form-control" />
    </div>
    <div>
        <label asp-for="PaisDeOrigen"></label>
        <input asp-for="PaisDeOrigen" class="form-control" />
    </div>
    <div>
        <label asp-for="SponsorPrincipal"></label>
        <input asp-for="SponsorPrincipal" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
</form>
