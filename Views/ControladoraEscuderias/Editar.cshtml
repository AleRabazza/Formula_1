@model Formula_1.Models.Escuderia

@{
    ViewBag.Title = "Editar Escudería";
}

<h2>Editar Escudería</h2>

<form asp-action="Editar" method="post" class="form-group">
    <input type="hidden" id="IdEscuderia" name="IdEscuderia" value="@Model.IdEscuderia" />

    <div class="mb-3">
        <label for="Nombre" class="form-label">Nombre</label>
        <input type="text" id="Nombre" name="Nombre" value="@Model.Nombre" class="form-control" required />
    </div>

    <div class="mb-3">
        <label for="PuntajeAcumulado" class="form-label">Puntaje Acumulado</label>
        <input type="number" id="PuntajeAcumulado" name="PuntajeAcumulado" value="@Model.PuntajeAcumulado" class="form-control" required />
    </div>

    <div class="mb-3">
        <label for="PaisDeOrigen" class="form-label">País de Origen</label>
        <input type="text" id="PaisDeOrigen" name="PaisDeOrigen" value="@Model.PaisDeOrigen" class="form-control" required />
    </div>

    <div class="mb-3">
        <label for="SponsorPrincipal" class="form-label">Sponsor Principal</label>
        <input type="text" id="SponsorPrincipal" name="SponsorPrincipal" value="@Model.SponsorPrincipal" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success">Guardar Cambios</button>
    <a href="@Url.Action("Listado", "ControladoraEscuderias")" class="btn btn-secondary">Cancelar</a>
</form>
